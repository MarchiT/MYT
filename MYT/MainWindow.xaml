<Window x:Class="MYT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MYT"
        mc:Ignorable="d"
        Title="MYT" Height="700" Width="350">
    <Grid Margin="0,0,-8,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>

        <!--<Image x:Name="sourceImg" Grid.Column="1" Grid.Row="1" Stretch="Uniform" Margin="0,0,0,316"/>
        <Image x:Name="processedImg" Grid.Column="1" Grid.Row="1" Stretch="Uniform" Margin="0,316,0,0"/>-->
        <Button x:Name="btnLoad" Content="Load" Grid.Column="1" HorizontalAlignment="Left" Margin="108,48,0,0" VerticalAlignment="Top" Width="75" Click="btnLoad_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnReset" Content="Reset Image" Grid.Column="1" HorizontalAlignment="Left" Margin="108,78,0,0" VerticalAlignment="Top" Width="74" Click="btnReset_Click" Height="20" Grid.ColumnSpan="2"/>
        <Button x:Name="btnFilterBlackWhite" Content="Black White" HorizontalAlignment="Left" Margin="20,262,0,0" VerticalAlignment="Top" Width="247" Click="btnFilterBlackWhite_Click" Height="20" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="btnFilterHiSatchn" Content="HiSatch" HorizontalAlignment="Left" Margin="20,297,0,0" VerticalAlignment="Top" Width="247" Click="btnFilterHiSatchn_Click" Height="20" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="btnFilterInvert" Content="Invert" HorizontalAlignment="Left" Margin="20,334,0,0" VerticalAlignment="Top" Width="247" Click="btnFilterInvert_Click" Height="20" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="btnFilterComic" Content="Comic" HorizontalAlignment="Left" Margin="20,372,0,0" VerticalAlignment="Top" Width="247" Click="btnFilterComic_Click" Height="20" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="btnSave" Content="Save" Grid.Column="1" HorizontalAlignment="Left" Margin="107,589,0,0" VerticalAlignment="Top" Width="75" Height="20" Grid.ColumnSpan="2" Click="btnSave_Click"/>
        <Button x:Name="btnLomograph" Content="Lomograph" HorizontalAlignment="Left" Margin="20,410,0,0" VerticalAlignment="Top" Width="247" Height="20" Grid.Column="1" Click="btnLomograph_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnLoSatch" Content="LoSatch" HorizontalAlignment="Left" Margin="20,478,0,0" VerticalAlignment="Top" Width="247" Height="20" Grid.Column="1" Click="btnLoSatch_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnPolaroid" Content="Polaroid" HorizontalAlignment="Left" Margin="20,444,0,0" VerticalAlignment="Top" Width="247" Height="20" Grid.Column="1" Click="btnPolaroid_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnSepia" Content="Sepia" HorizontalAlignment="Left" Margin="20,511,0,0" VerticalAlignment="Top" Width="247" Height="20" Grid.Column="1" Click="btnSepia_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnQuality" Content="Quality" Grid.Column="1" HorizontalAlignment="Left" Margin="20,193,0,0" VerticalAlignment="Top" Width="247" Grid.ColumnSpan="2" Click="btnQuality_Click"/>
        <Button x:Name="btnPixelate" Content="Pixelate" Grid.Column="1" HorizontalAlignment="Left" Margin="20,156,0,0" VerticalAlignment="Top" Width="247" Grid.ColumnSpan="2" Click="btnPixelate_Click"/>
    </Grid>
</Window>
